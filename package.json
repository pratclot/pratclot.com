{
  "name": "gatsby-blog",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "develop:backend": "yarn --cwd backend develop",
    "develop:frontend": "yarn --cwd frontend develop",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "build:frontend": "env-cmd -f frontend/.env yarn --cwd frontend build",
    "clean:frontend": "rm -rf frontend/public",
    "ci:frontend": "yarn clean:frontend && yarn build:frontend",
    "docker:frontend": "docker build --network host -t pratclot.com.frontend:latest frontend/",
    "run:frontend": "docker run -it pratclot.com.frontend:latest",
    "pack": "docker export pratclot.com.frontend -o pratclot.com.frontend.tar",
    "unpack": "docker import pratclot.com.frontend.tar pratclot.com.frontend:latest"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "npm-run-all": "4.1.5",
    "wait-on": "5.2.1"
  },
  "dependencies": {
    "env-cmd": "^10.1.0"
  }
}
